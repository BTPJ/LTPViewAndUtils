<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--FlowLayout流式布局-->
    <declare-styleable name="FlowLayout">
        <attr name="android:gravity" />
        <attr name="android:maxLines" format="integer" />
        <attr name="childHorizontalSpacing" format="dimension" />
        <attr name="childVerticalSpacing" format="dimension" />
        <attr name="maxNumber" format="integer" />
    </declare-styleable>

    <!--可设置最大高度的WrapScrollView的相关属性-->
    <declare-styleable name="WrapScrollView">
        <!--最大高度占屏幕的比例(默认是0.5)-->
        <attr name="maxHeightRatio" format="float" />
    </declare-styleable>
</resources>